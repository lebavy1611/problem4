<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="15dp"

    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <Button
            android:id="@+id/button26"
            android:layout_width="@string/width_bt"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_above="@+id/button17"
            android:text="1" />

        <Button
            android:id="@+id/button27"
            android:layout_width="@string/width_bt"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/button26"
            android:layout_toRightOf="@+id/button26"
            android:text="2" />

        <Button
            android:id="@+id/button28"
            android:layout_width="@string/width_bt"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/button27"
            android:layout_toRightOf="@+id/button27"
            android:text="3" />

        <Button
            android:id="@+id/button29"
            android:layout_width="@string/width_bt"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/button28"
            android:layout_toRightOf="@+id/button28"
            android:text="-" />

        <Button
            android:id="@+id/button30"
            android:layout_width="@string/width_bt"
            android:layout_height="96dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/button29"
            android:layout_toRightOf="@+id/button29"
            android:text="=" />

        <Button
            android:id="@+id/button31"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/button26"
            android:text="0" />

        <Button
            android:id="@+id/button33"
            android:layout_width="@string/width_bt"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button27"
            android:layout_toEndOf="@+id/button31"
            android:layout_toRightOf="@+id/button31"
            android:text="," />

        <Button
            android:id="@+id/button34"
            android:layout_width="@string/width_bt"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button28"
            android:layout_toEndOf="@+id/button33"
            android:layout_toRightOf="@+id/button33"
            android:text="+" />

    </RelativeLayout>
</RelativeLayout>